---
import BaseLayout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import StarsBackground from '../components/StarsBackground.astro';
---

<BaseLayout title="404 - Page Not Found | Snyco">
  <StarsBackground />
  <Navbar />
  <main class="relative min-h-screen text-gray-100 pt-16">
    <div id="gradient-overlay" class="fixed inset-0 bg-gradient-to-b from-black to-[#177171]/30 opacity-100 transition-opacity duration-300 pointer-events-none"></div>
    <div class="relative">
      <section class="container mx-auto px-4 min-h-[calc(100vh-4rem)] flex items-center justify-center">
        <div class="max-w-2xl mx-auto w-full text-center">
          <div class="bg-black/40 backdrop-blur-sm rounded-2xl p-8 border border-[#00b4b4]/20 shadow-2xl">
            <h1 class="text-9xl font-bold text-[#00b4b4] mb-4 font-jetbrains">404</h1>
            <h2 class="text-3xl font-bold text-[#00b4b4] mb-6 font-jetbrains">Page Not Found</h2>
            <p class="text-gray-300 mb-8">
              The page you're looking for doesn't exist or has been moved.
            </p>
            <a 
              href="/" 
              class="inline-flex items-center gap-2 bg-black/40 hover:bg-black/60 text-[#00b4b4] px-6 py-2.5 rounded-lg transition-all duration-300 border border-[#00b4b4]/20 hover:border-[#00b4b4]/40 text-center font-medium"
            >
              <span>Back to Home</span>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3" />
              </svg>
            </a>
          </div>
        </div>
      </section>
    </div>
  </main>
</BaseLayout>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
</style>

<script>
  const gradientOverlay = document.getElementById('gradient-overlay');
  
  window.addEventListener('scroll', () => {
    const scrollPercent = (window.scrollY / (document.documentElement.scrollHeight - window.innerHeight)) * 100;
    const opacity = Math.max(0.3, 1 - (scrollPercent / 100));
    if (gradientOverlay) {
      gradientOverlay.style.opacity = opacity.toString();
    }
  });
</script> 